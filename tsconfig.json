{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@data": ["./Lib/Data/index.ts"],
      "@src": ["./src/main.ts"],
    }
  },
  "exclude": [
    "node_modules",
    "gh-pages"
  ]
}